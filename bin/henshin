#!/usr/bin/env ruby
# henshin - cli tool to process MDSL files

require_relative  '../lib/henshin'
require 'optparse'

parser = OptionParser.new do |opts|
  opts.banner  = 'Henshin - Convert .mdsl to .md'
      opts.separator ""
  opts.on('-r library', '--require library', String, 'Require library before running') do |library|
    require library
  end 
  opts.on('-h', '--help', 'Displays this help') do
    puts opts
  exit
  end

  opts.on('-v', '--version', 'Display version tag.') do
    puts 'mdgen v0.1'
  exit
  end
end

parser.parse!

contents = File.read ARGV.first
g = MdGen.new
r = GfmRender.new

output =   r.render(g.eval_string(contents))
puts output
